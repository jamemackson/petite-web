<div class="feature-wrapper">
  <Image::Cldnry @src={{@item.image}} @alt={{@item.title}} @width={{1200}}/>
  <div class="slightly-opaque content">
    {{{@item.content}}}
    {{#if @item.link}}
      {{#if @item.link.url}}
        <a class="button" href={{@item.link.url}}>{{@item.link.text}}</a>
      {{else}}
        {{#if @item.link.route}}
          <button type="button"
            {{on 'click' (fn this.goto @item.link.route @item.link.model)}}>
            {{@item.link.text}}
          </button>
        {{/if}}
      {{/if}}
    {{/if}}
  </div>
</div>
